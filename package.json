{
  "name": "lampa-desktop",
  "productName": "Lampa",
  "version": "1.2.0",
  "description": "Десктопное приложение-клиент для Lampa",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kolovatoff/lampa-desktop"
  },
  "main": "src/main.js",
  "engines": {
    "node": ">=24.0.0 <25.0.0",
    "npm": "please-use-yarn",
    "yarn": ">= 4.0.0"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-linux": "electron-builder --linux --publish=never",
    "build-mac": "electron-builder --mac --x64 --arm64 --publish=never",
    "build-win": "electron-builder --win --x64 --ia32 --publish=never",
    "lint": "yarn lint:eslint && yarn lint:prettier",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier . --check",
    "lintfix": "eslint . --fix && prettier --write --list-different .",
    "release:changelog": "commit-and-tag-version",
    "release": "yarn release:changelog && git push --follow-tags origin $CI_COMMIT_REF_NAME"
  },
  "commit-and-tag-version": {
    "scripts": {
      "postchangelog": "yarn lintfix"
    }
  },
  "dependencies": {
    "electron-store": "11.0.2",
    "electron-updater": "6.7.3",
    "http-proxy": "1.18.1",
    "which": "6.0.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "commit-and-tag-version": "12.6.1",
    "electron": "40.3.0",
    "electron-builder": "26.7.0",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "globals": "17.3.0",
    "prettier": "3.8.1"
  },
  "author": {
    "name": "yumata, Kolovatoff",
    "email": "kirill@kolovatov.ru"
  },
  "license": "MIT",
  "build": {
    "appId": "com.lampa.desktop",
    "productName": "Lampa",
    "artifactName": "lampa-${arch}-${version}.${ext}",
    "linux": {
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        "AppImage"
      ],
      "icon": "assets/linux.icns",
      "category": "Multimedia"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/mac.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/win.ico",
      "verifyUpdateCodeSignature": true
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "installerIcon": "assets/win.ico",
      "uninstallerIcon": "assets/win.ico",
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "Kolovatoff",
      "repo": "lampa-desktop"
    }
  },
  "files": [
    "assets/**/*",
    "src/**/*",
    "node_modules/*",
    "!dist/*"
  ]
}
