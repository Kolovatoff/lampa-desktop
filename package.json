{
  "name": "lampa-desktop",
  "productName": "Lampa",
  "version": "1.0.0",
  "description": "Десктоп приложение для Lampa",
  "repository": {
    "type": "git",
    "url": "https://github.com/Kolovatoff/lampa-desktop"
  },
  "main": "src/index.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build-linux": "electron-builder --linux --publish=never",
    "build-mac": "electron-builder --mac --x64 --arm64 --publish=never",
    "build-win": "electron-builder --win --x64 --ia32 --publish=never"
  },
  "dependencies": {
    "electron-squirrel-startup": "^1.0.1",
    "express": "^5.2.1",
    "http-proxy-middleware": "^3.0.5",
    "which": "^6.0.0"
  },
  "devDependencies": {
    "electron": "40.0.0",
    "electron-builder": "26.4.0"
  },
  "author": {
    "name": "ymata, GideonWhite1029, Boria138, Kolovatoff",
    "email": "kirill@kolovatov.ru"
  },
  "license": "MIT",
  "build": {
    "appId": "com.lampa.desktop",
    "productName": "Lampa",
    "artifactName": "lampa-${arch}-${version}.${ext}",
    "linux": {
      "target": "AppImage",
      "icon": "icons/og.png",
      "category": "Multimedia"
    },
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "icons/og.png",
      "target": ["dmg"]
    },
    "win": {
      "target": ["nsis"],
      "icon": "icons/og.ico",
      "verifyUpdateCodeSignature": true
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false,
      "installerIcon": "icons/og.ico",
      "uninstallerIcon": "icons/og.ico",
      "license": "LICENSE"
    },
    "publish": {
      "provider": "github",
      "owner": "Kolovatoff",
      "repo": "lampa-desktop"
    }
  }
}
